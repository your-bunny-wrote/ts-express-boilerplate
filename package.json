{
  "name": "ts-express-boilerplate",
  "description": "Typescript boilerplate",
  "version": "0.0.1",
  "scripts": {
    "compile": "rm -rf ./build && npx tsc -p ./src",
    "start": "nodemon",
    "start:production": "node ./build/www.js",
    "test": "NODE_ENV=test TS_NODE_PROJECT='./src/tsconfig.json' mocha -r ts-node/register -c ./tests/*.ts"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "config": "^1.30.0",
    "express": "~4.13.1",
    "morgan": "~1.6.1",
    "ts-node": "^5.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.1",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/config": "^0.0.34",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.40",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.10",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.9.1",
    "typescript": "^2.2.1"
  },
  "lint-staged": {
    "src/**/*.ts": "./node_modules/.bin/tslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
